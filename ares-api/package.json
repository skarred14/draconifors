{
  "name": "ares",
  "version": "1.0.0",
  "description": "Ares Microservice",
  "main": "src/apps.js",
  "scripts": {
    "start": "node ./dist/app.js",
    "dev": "nodemon ./dist/app.js",
    "build": "cod-scripts build",
    "circuits": "onchange -a '**/*.circom' -- node './dist/init.js' {{changed}}",
    "build:watch": "npm run build -- --watch & npm run circuits",
    "test": "mocha --require @babel/polyfill --require @babel/register --timeout 5000 src/test/*.js  --watch --watch-extensions js",
    "fix": "npm run format && npm run lint -- --fix",
    "format": "prettier --write \"**/*.{json,css,scss,md}\"",
    "lint": "eslint .",
    "lint:md": "markdownlint -i node_modules -i dist .",
    "validate": "npm run lint && npm run lint:md"
  },
  "author": "",
  "license": "",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "blake2b": "^2.1.3",
    "body-parser": "1.19.0",
    "circom": "^0.0.35",
    "config": "^3.2.4",
    "eslint-plugin-react-hooks": "^1.7.0",
    "ganache-cli": "^6.9.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-mount": "^4.0.0",
    "koa-route": "^3.2.0",
    "mongodb": "^3.3.2",
    "node-fetch": "^2.6.0",
    "snarkjs": "^0.1.20",
    "web3": "^1.2.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "chai": "^4.2.0",
    "cod-scripts": "^3.2.0",
    "markdownlint-cli": "^0.15.0",
    "mocha": "^7.0.1",
    "nodemon": "^1.19.4",
    "onchange": "^6.1.0"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/cod-scripts/eslint.js"
    ]
  }
}
